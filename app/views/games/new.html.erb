<!-- app/views/games/new.html.erb -->
<div class="container">
  <h1 class="mt-5">Word Game</h1>

  <p class="lead">Random Letters: <%= @letters.join(', ') %></p>

  <form action="score" method="post" data-turbo="false" class="mt-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="mb-3">
      <label for="word" class="form-label">What is the longest word you can find:</label>
      <input type="text" name="word" id="word" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
